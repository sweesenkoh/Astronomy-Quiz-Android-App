<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QuestionFragment"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView_question"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textAlignment="center"
        android:textColor="@color/navajo_white"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/options_textView"
        android:gravity="center_vertical"
        android:textColor="@color/light_grey"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="13sp"
        android:autoSizeStepGranularity="1sp"
        android:scrollbars = "vertical"
        android:scrollbarThumbVertical="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/textView_question"
        app:layout_constraintBottom_toTopOf="@id/button_optionA"
        android:paddingTop="25dp"
        android:paddingBottom="6dp"/>

    <!--<android.support.constraint.ConstraintLayout-->
        <!--android:id="@+id/button_optionA"-->
        <!--android:layout_width="0dp"-->
        <!--android:padding="6dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:background="@color/dark_gray"-->
        <!--app:layout_constraintRight_toLeftOf="@id/button_optionB"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent">-->
        <!---->
        <!---->
    <!--</android.support.constraint.ConstraintLayout>-->



    <Button
        android:id="@+id/button_optionA"
        android:layout_width="0dp"
        android:padding="6dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toLeftOf="@id/button_optionB"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="A"
        android:textSize="22sp"
        android:backgroundTint="@color/middle_gray"
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/button_optionB"
        android:layout_width="0dp"
        android:padding="6dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toLeftOf="@id/button_optionC"
        app:layout_constraintLeft_toRightOf="@id/button_optionA"
        android:text="B"
        android:textSize="22sp"
        android:backgroundTint="@color/middle_gray"
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/button_optionC"
        android:layout_width="0dp"
        android:padding="6dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toLeftOf="@id/button_optionD"
        app:layout_constraintLeft_toRightOf="@id/button_optionB"
        android:text="C"
        android:textSize="22sp"
        android:backgroundTint="@color/middle_gray"
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/button_optionD"
        android:layout_width="0dp"
        android:padding="6dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toLeftOf="@id/button_optionE"
        app:layout_constraintLeft_toRightOf="@id/button_optionC"
        android:text="D"
        android:textSize="22sp"
        android:backgroundTint="@color/middle_gray"
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/button_optionE"
        android:layout_width="0dp"
        android:padding="6dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_optionD"
        android:text="E"
        android:textSize="22sp"
        android:backgroundTint="@color/middle_gray"
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"/>



</android.support.constraint.ConstraintLayout>